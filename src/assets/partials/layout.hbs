<!doctype html>
<html class="no-js">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />

	<title>{{ data.site.title }}{{ file.meta.title }}</title>

	<link rel="author" href="http://www.shannonmoeller.com/humans.txt" />
	<link rel="canonical" href="{{ data.site.canonical }}{{ file.meta.canonical }}" />
	{{#block "styles"}}
		<link rel="stylesheet" href="/assets/styles/main.css?v={{ util.pkg.version }}" />
	{{/block}}
</head>
<body>
	<div class="site">
		<header class="site-hd">
			<h1 class="logo">
				<a class="aspect aspect_3x1" href="/">
					<svg class="aspect-bd" aria-hidden="true">
						<use xlink:href="/assets/media/images/icons.svg?v={{ util.pkg.version }}#logo"></use>
					</svg>
					<span class="u-visuallyHidden">{{ data.site.title }}</span>
				</a>
			</h1>
		</header>

		<main class="site-bd">
			{{{block "body"}}}
		</main>

		<footer class="site-ft">
			&copy; {{ data.site.author.name }}
		</footer>
	</div> <!-- /site -->

	{{#block "scripts"}}
		<script src="/assets/scripts/main.js?v={{ util.pkg.version }}"></script>
		<script>
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			 (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			 m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			 })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			ga('create', '{{ util.env.GOOGLE_TRACKING_ID }}', 'auto');
			ga('send', 'pageview');
		</script>
	{{/block}}
</body>
</html>
